@model IEnumerable<ProjectDipMVC.Models.ProjectDescript>

@{
    ViewData["Title"] = "Index";
    var ProjectId = (int)ViewBag.ProjectId;
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Добавить секцию", "Create", "ProjectDescripts", new {ProjectId = ViewBag.ProjectId})
</p>
    @Html.ActionLink("Назад к проектам", "Index", "Projects")
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Login)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjDscrptId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjDscrptId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjDscrptId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
